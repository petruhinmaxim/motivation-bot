{
  "name": "motivation-bot",
  "version": "1.0.0",
  "description": "Telegram bot for motivation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:set-days": "tsx scripts/set-successful-days.ts",
    "docker:dev": "docker compose -f docker-compose.yml up -d",
    "docker:build": "docker build -t motivation-bot:latest .",
    "docker:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker compose -f docker-compose.prod.yml down",
    "docker:logs": "docker compose -f docker-compose.prod.yml logs -f bot",
    "dashboard:dev": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm run build",
    "dashboard:start": "cd dashboard && npm run start"
  },
  "keywords": [
    "telegram",
    "bot",
    "motivation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "grammy": "^1.20.0",
    "ioredis": "^5.3.2",
    "opentype.js": "^1.3.4",
    "pg": "^8.11.3",
    "sharp": "^0.34.5",
    "winston": "^3.11.0",
    "xstate": "^5.4.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.21.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
